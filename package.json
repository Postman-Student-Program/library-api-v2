{
  "name": "library-api-v2",
  "version": "2.0.0",
  "description": "Library API for managing books",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.build.json && npm run copy-spec",
    "start": "npm run build && NODE_ENV=production node dist/server.js",
    "dev": "nodemon",
    "test": "npm run db:test:pristine && NODE_ENV=test jest",
    "test:watch": "npm run db:test:pristine && NODE_ENV=test jest --watch",
    "copy-spec": "cp src/schema.yaml dist/schema.yaml",
    "clean": "rm -fr dist",
    "psql": "psql -U librarian library_api_dev",
    "db:init": "psql postgres -f ./src/db/sql/init.sql",
    "db:init:prod": "psql postgres --password -f ./src/db/sql/init-prod.sql",
    "db:migrate:make": "knex --knexfile ./src/db/knexfile.ts migrate:make",
    "db:dev:reset": "NODE_ENV=development ts-node ./src/db/helpers/resetDb.ts",
    "db:dev:latest": "NODE_ENV=development knex --knexfile ./src/db/knexfile.ts migrate:latest",
    "db:dev:seed": "NODE_ENV=development knex --knexfile ./src/db/knexfile.ts seed:run",
    "db:dev:pristine": "npm run db:dev:reset && npm run db:dev:latest && npm run db:dev:seed",
    "db:test:reset": "NODE_ENV=test ts-node ./src/db/helpers/resetDb.ts",
    "db:test:latest": "NODE_ENV=test knex --knexfile ./src/db/knexfile.ts migrate:latest",
    "db:test:seed": "NODE_ENV=test knex --knexfile ./src/db/knexfile.ts seed:run",
    "db:test:pristine": "npm run db:test:reset && npm run db:test:latest && npm run db:test:seed",
    "db:prod:latest": "NODE_ENV=production knex --knexfile ./src/db/knexfile.ts migrate:latest",
    "db:prod:seed": "NODE_ENV=production knex --knexfile ./src/db/knexfile.ts seed:run"
  },
  "author": "claire.froelich@postman.com",
  "license": "ISC",
  "dependencies": {
    "bad-words": "^3.0.4",
    "dotenv": "^16.0.0",
    "fastify": "^3.27.4",
    "fastify-error": "^1.0.0",
    "fastify-openapi-glue": "^2.6.6",
    "knex": "^1.0.4",
    "pg": "^8.7.3"
  },
  "devDependencies": {
    "@types/bad-words": "^3.0.1",
    "@types/jest": "^27.4.1",
    "@types/knex": "^0.16.1",
    "@types/node": "17.0.21",
    "js-yaml": "^4.1.0",
    "nodemon": "2.0.15",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "10.6.0",
    "typescript": "4.6.2"
  }
}
